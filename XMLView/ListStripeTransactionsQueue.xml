<?xml version="1.0" encoding="UTF-8"?>
<view>
    <!-- Columnas del listado -->
    <columns>

        <column name="Evento" order="100" display="left">
            <widget type="enum" fieldname="event" />
        </column>

        <column name="Pago de stripe" order="110" display="left">
            <widget type="text" fieldname="object_id" />
        </column>

        <column name="Fecha del pago" order="110" display="left">
            <widget type="text" fieldname="object_date" />
        </column>

        <column name="Tipo de transacción" order="120" display="left">
            <widget type="text" fieldname="transaction_type" />
        </column>

        <column name="Transacción" order="120" display="left">
            <widget type="text" fieldname="transaction_id" />
        </column>

        <column name="Destino" order="130" display="center">
            <widget type="text" fieldname="destination" />
        </column>

        <column name="Destino Id" order="130" display="center">
            <widget type="text" fieldname="destination_id" />
        </column>

        <column name="Estado" order="130" display="center">
            <widget type="text" fieldname="status" />
        </column>

<!--        <column name="Estado" order="140" display="center">-->
<!--            &lt;!&ndash; mapear valores a colores (ok / error). Para filas pendientes (NULL) no habrá opción y no coloreará &ndash;&gt;-->
